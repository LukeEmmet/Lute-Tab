%!PS-Adobe-3.0 Query
%%Title: list all the fonts on a printer with examples
%%?BeginFontListQuery: font

/fontsize 10 def
/str 80 string def
/xpos 50 def
/ypos 730 def

FontDirectory 
{
	xpos ypos moveto
	pop
	dup
		findfont fontsize scalefont setfont
	  (abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789  ) 
		show
	pstack 
	dup /ZapfDingbats eq { 
		/Helvetica findfont fontsize scalefont setfont
		str cvs show
	} 
	{
		str cvs show
	} ifelse
	/ypos ypos 16 sub def

} forall

showpage
%%?EndFontListQuery: