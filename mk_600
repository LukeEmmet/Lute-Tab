#!/bin/csh
#
#  make the lute9 font
#
#
set FMT = plain
#
# 600 dpi ...
# ljfour  canonex docutech lexmarku ljfive ljfzzzfr okifte qmsostf qmsoszz ricohsp vtszz
# 
# 
set MODE=cxnew
#
# if using precompiled modes set here, otherwise in lute9
#
# note - aug 2002 - mode doesn't seem to do much
# here, overridden in lute9.mf most likely.
# but it is needed for the command line, don't know why.
# but it means fixing the mode in lute9.mf for different dpi
# mag:=1.0 is default, no need to specify
#
# virmf \&$FMT "\mode:=$MODE; \mag:=1.0; input lute9; bye;"
virmf \&$FMT  "\mode:=$MODE; input lute9; bye;"
gftopk ./lute9.600gf > ./lute9.600pk
#
#rm -f lute9*gf lute9*bdf lute9.log
#
if ($#argv > 0  ) then
 echo $argv[1]
 if ( $argv[1] != 'b' ) then
	echo foo
#  virmf \&$FMT "\mode:=$MODE; \mag:=1.0; input lute85; bye;"
#  gftopk ./lute85.600gf > ./lute85.600pk
  virmf \&$FMT "\mode:=$MODE; \mag:=1.0; input lute8; bye;"
  gftopk ./lute8.600gf > ./lute8.600pk
  virmf \&$FMT "\mode:=$MODE; \mag:=1.0; input lute7; bye;"
  gftopk ./lute7.600gf > ./lute7.600pk
  virmf \&$FMT "\mode:=$MODE; \mag:=1.0; input lute6; bye;"
  gftopk ./lute6.600gf > ./lute6.600pk
 else  
  virmf \&$FMT "\mode:=$MODE; \mag:=1.0; input blute9; bye;"
  gftopk ./blute9.600gf > ./blute9.600pk
  virmf \&$FMT "\mode:=$MODE; \mag:=1.0; input blute85; bye;"
  gftopk ./blute85.600gf > ./blute85.600pk
  virmf \&$FMT "\mode:=$MODE; \mag:=1.0; input blute8; bye;"
  gftopk ./blute8.600gf > ./blute8.600pk
  virmf \&$FMT "\mode:=$MODE; \mag:=1.0; input blute7; bye;"
  gftopk ./blute7.600gf > ./blute7.600pk
  virmf \&$FMT "\mode:=$MODE; \mag:=1.0; input blute6; bye;"
  gftopk ./blute6.600gf > ./blute6.600pk
 endif
endif
